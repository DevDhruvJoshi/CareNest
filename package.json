{
  "name": "carenest",
  "private": true,
  "version": "0.1.0",
  "description": "CareNest monorepo: web, api, and shared packages",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run -ws build",
    "dev": "npm run -ws --if-present dev",
    "start": "npm run -w apps/api start",
    "lint": "npm run -ws --if-present lint",
    "test": "npm run -ws --if-present test",
    "db:generate": "npm run -w packages/db prisma:generate",
    "db:migrate": "npm run -w packages/db prisma:migrate",
    "db:seed": "npm run -w packages/db seed",
    "db:setup": "npm run db:generate && npm run db:migrate && npm run db:seed",
    "sync:once": "node scripts/auto_sync.js --once --silent",
    "sync:daemon": "node scripts/auto_sync.js --daemon --interval=60000 --silent",
    "sync:setup": "node scripts/setup_sync_hooks.js",
    "postinstall": "node scripts/setup_sync_hooks.js"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "prettier": "^3.3.3"
  },
  "dependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "jsonwebtoken": "^9.0.2",
    "zod": "^4.1.11"
  }
}
