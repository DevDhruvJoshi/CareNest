generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Alert {
  id        String   @id @default(cuid())
  level     String
  subject   String?
  message   String
  channel   String
  to        String?
  status    String    @default("sent") // sent, failed, escalated
  meta      Json?
  createdAt DateTime  @default(now())
}

model CameraEvent {
  id        String   @id @default(cuid())
  cameraId  String
  type      String   // motion, fall, offline, online
  details   Json?
  createdAt DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(cuid())
  actorId   String?
  action    String
  resource  String?
  meta      Json?
  createdAt DateTime @default(now())
}

model Message {
  id        String   @id @default(cuid())
  fromId    String?
  toId      String?
  text      String
  createdAt DateTime @default(now())
}

